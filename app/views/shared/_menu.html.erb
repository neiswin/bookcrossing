<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom bg-grey">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="public/images/logo.png"></use></svg>
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <li><%= link_to 'Home', root_path, class: 'nav-link px-2 link-dark' %></li>
          <li><%= link_to "Library", books_path, class: "nav-link px-2 link-dark"  %></li>
          <li><%= link_to "About", about_path, class: "nav-link px-2 link-dark"  %></li>
      </ul>

      <div class="col-md-3 text-end">
        <% if user_signed_in? %>

          <div class="btn-group">
                <%= link_to '#',
                class: 'btn btn-primary dropdown-toggle',
                data: {"bs-toggle": 'dropdown'} do %>
                    <%= current_user.first_name %>
                    <%= current_user.last_name %>
                                            <% end %>
                  <ul class="dropdown-menu ">
                    <li><%= link_to 'Edit', edit_user_registration_path, method: :get, class: 'dropdown-item'%></li>

                    <li><hr class="dropdown-divider"></li>

                    <li><%= link_to 'Sign Out', destroy_user_session_path, 'data-turbo-method': :delete, class: 'dropdown-item' %></li>
                  </ul>

          </div>

        <% else %>

          <%= link_to "Login", new_user_session_path, class: 'btn btn-success'  %>
          <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-success me-2'  %> 
        
        <% end %>

      </div>
    </header>
  </div>