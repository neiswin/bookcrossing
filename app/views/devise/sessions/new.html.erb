<% provide :page_title, "Log In" %>


<h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
    <div class="col-3 col-sm-2">
    </div>

    <div class="col-12 col-sm-8">
      <div class="mb-2">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your password'  %>
      </div>

      <% if devise_mapping.rememberable? %>
      
      <div class="mb-2">     
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
      </div>
      
      <% end %>

      <div class="mb-2">
        <%= f.submit "Log In", class: "btn btn-success w-150 mt-3", data: { turbo:false } %>
      </div>

      <div class="mb-2">
        <%= render "devise/shared/links" %>     
      </div>
    
    </div>


    <div class="col-3 col-sm-2">
    </div>
</div>
<% end %>


