<% provide :page_title, "Sign Up" %>

<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="row">
    <div class="col-3 col-sm-2">
    </div>

    <div class="col-12 col-sm-8">   
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-2">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name , autofocus: true, class:'form-control', placeholder: 'Enter first name'  %>
      </div>
      

      <div class="mb-2">
        <%= f.label :last_name, class: "form-label"  %>
        <%= f.text_field :last_name, autofocus: true, class:'form-control', placeholder: 'Enter last name' %>
      </div>

      <div class="mb-2">
        <%= f.label :email, class: "form-label"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder: 'Enter your email' %>
      </div>

      <div class="mb-2">
        <%= f.label :password, class: "form-label"  %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: 'Create password'  %>
      </div>

      <div class="mb-2">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'Confirm password'  %>
      </div>

      <div class="mb-2">
        <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-outline-success" %>
      </div>

      <div class="mb-2"> 
        <%= link_to "Log In If you have account", new_session_path(resource_name), class: "mt-2" %>
      </div>

    </div>

    <div class="col-3 col-sm-2">
    </div>
</div>
<% end %>
