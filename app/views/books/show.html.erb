 
  <div class="card-body">
    <h5 class="card-title"><%= @book.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @book.author %></h6>
    <p class="card-text"><%= @book.description %></p>
  </div>


<hr class="my-3">
<h2>Enter comment</h2>
<%= render 'shared/errors', object: @comment %>

  <%= form_with model: [@book, @comment] do |c| %>
    <div class="mb-2 mt-3">
        <%= c.text_field :body, placeholder: "Enter comment here", class:'form-control'  %>
    </div>
    <div class="mb-2">
      <%= c.submit "Send", class: "btn btn-success w-150 mt-3", data: { turbo:false } %>
    </div>
  <% end %>

  <h2 class="my-3">Comments</h2>
  <div class="my-3">
    <% @comments.each do |comment| %>
    <time class="text-muted"><%= comment.created_at %></time>
    <p class=""><%= comment.body %></p>
    <div>
      <%= button_to "Delete", book_comment_path(@book,comment),  method: :delete,  data: { confirm: 'Are you sure?'}, class: "btn btn-danger m-1"  %>
    </div>
    
    <% end %>
  </div>