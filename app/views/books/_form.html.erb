  <div class="row">
    <div class="col-3 col-sm-2">
    </div>

    <div class="col-12 col-sm-8">
      <%= render 'shared/errors', object: @book %>
        
      <%= form_with model: @book do |f|%>

      <div class="mb-2">
          <%= f.label :title, "Title book", class: "form-label" %>
          <%= f.text_field :title, placeholder: "Enter title book", class:'form-control'  %>
      </div>

      <div class="mb-2">
        <%= f.label :author, "Author", class: "form-label" %>
        <%= f.text_field :author, placeholder: "Enter author name", class:'form-control'  %>
      </div>

      <div class="mb-2">
        <%= f.label :description, "Description book", class: "form-label" %>
        <%= f.text_area :description, placeholder: "Enter description", class:'form-control' %>
      </div>

      <div class="mb-2">
        <%= f.submit "Save", class: "btn btn-success w-150 mt-3", data: { turbo:false } %>
      </div>
    

      <% end %>
    </div>

  <div class="col-3 col-sm-2">
  </div>
</div>