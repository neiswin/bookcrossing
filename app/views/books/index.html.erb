<h1>All books</h1>

<%= link_to "Добавить книгу", books_new_path, class:"btn btn-primary btn-lg" %>

<% @books.each do |book| %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= book.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
    <p class="card-text"><%= book.description %></p>
  </div>
</div>
<% end %>


